@model IEnumerable<CupcakeYPasteles.Models.DineroEnCaja>

@{
    ViewBag.Title = "Index";
}

<h1 class="text-center">Dinero en caja</h1>

<button class="btn btn-primary" onclick="location.href='@Url.Action("Create")'">Agregar nuevo</button>

<hr />

<table class="table table-striped table-bordered" id="tablacaja" cellspacing="0" width="100%" style="background:#FFFFFF">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dinero)
            </th>
            <th></th>
         
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dinero)
                </td>
                <td>
                    <button class="btn btn-danger" onclick="location.href='@Url.Action("Delete",new { id=item.id})'">Eliminar</button>
                </td>
            </tr>
        }
    </tbody>

</table>
